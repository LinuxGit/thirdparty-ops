---
name: taskA
task-mode: all  # full/incremental/all
flavor: mysql  # mysql/mariadb
in-sharding: true  # whether multi dm-worker do one sharding job
checkpoint-schema-prefix: "checkpoint" # checkpoint schema prefix for Syncer / Loader
remove-previous-checkpoint: false # whether to remove previous checkpoint, set to `true` to start a fresh task even if the task-name used before


target-database:
  host: "127.0.0.1"
  port: 4000
  user: "root"
  password: ""

MySQL-instances:             # one or more source database, config more source database for sharding merge
  -
    config:
      host: "127.0.0.1"
      port: 3307
      user: "root"
      password: "root"
    server-id: 101           # unique in all instances

    # binlog pos used to as start pos for syncer, for different task-mode, this maybe used or not
    # `full` / `all`:
    #    never be used
    # `incremental`:
    #    if `remove-previous-checkpoint` is true, this will be used
    #    if checkpoints already exists in `checkpoint-schema`, this will not be used
    #    otherwise, this will be used
    meta:
      binlog-name: binlog-00001
      binlog-pos: 4
#    route-rules: ["user-route-rules"]
    filter-rules: ["user-filter-1", "user-filter-2"]
    column-mapping-rules: ["user-column-mapping"]

    # `mydumper-config-name` and `mydumper` should only set one
    mydumper-config-name: "global"   # ref `mydumpers` config
#    mydumper:
#      mydumper-path: "./mydumper"
#      threads: 16

    # `loader-rule` and `loader` should only set one
    # `loader-config-name` and `loader` should only set one
    loader-config-name: "global"    # ref `loaders` config
    #loader:                  # local loader rule
    #  pool-size: 32
    # `syncer-config-name` and `syncer` should only set one

    syncer-config-name: "global"    # ref `syncers` config
    #syncer:
    #  worker-count: 32

  -
    config:
      host: "127.0.0.1"
      port: 3308
      user: "root"
      password: "root"
    server-id: 102
    meta:
      binlog-name: binlog-00001
      binlog-pos: 320
#    route-rules: ["user-route-rules"]
    filter-rules: ["user-filter-2"]
    column-mapping-rules: ["user-column-mapping"]

    mydumper:
      mydumper-path: "./mydumper"
      threads: 4
      chunk-filesize: 8
      skip-tz-utc: true
      extra-args: "-B t1 -T tt10,tt14"

    loader:                  # local loader rule
      pool-size: 32
      dir: "./examples/"
      checkpoint-schema: "tidb_loader"
      alternative-db: ""
      source-db: ""
      rm-checkpoint: false

    syncer:
      syncer-checkpoint-schema: "checkpoint_syncer"
      worker-count: 32
      batch: 2000
      max-retry: 200
      enable-gtid: false
      auto-fix-gtid: false
      disable-detect: false
      safe-mode: false

# other common configs shared by all instances

routes:                      # schema/table route mapping
  user-route-rules:
    schema-pattern: "user_*"
    table-pattern: "abc_*"
    target-schema: "user"
    target-table: "abc"

filters:                     # filter rules, mysql instance can ref rules in it
  user-filter-1:
    pattern-schema: "user_*"
    pattern-table: "abc_*"
    do-statement: ["ALL"]               # 白名单
    skip-statement: ["TRUNCATE TABLE"]  # 黑名单
  user-filter-2:
    pattern-schema: "user_*"
    pattern-table: "abc_*"
    do-statement: ["ALL"]               # 白名单

column-mappings:             # column mapping rules, mysql instance can ref rules in it
  user-column-mapping:
    pattern-schema: "test_*"
    pattern-table: "abc_*"
    op: "add-column"       # add/ignore/modify -column
    source-column: "id"
    target-column: "id"
    expression: "add prefix"
    arguments: ["instance ID"]
    sql: "alter table xx modify column xxx"

mydumpers:
  global:
    mydumper-path: "./mydumper"
    threads: 16
    chunk-filesize: 64
    skip-tz-utc: true
#    extra-args: "-B test -T t1,t2 --no-locks"

loaders:                     # loader process unit specific configs, mysql instance can ref one config in it
  global:
    pool-size: 16
    dir: "./examples/"
    checkpoint-schema: "tidb_loader"
    alternative-db: ""
    source-db: ""
    rm-checkpoint: false

syncers:                     # syncer process unit specific configs, mysql instance can ref one config in it
  global:
    syncer-checkpoint-schema: "checkpoint_syncer"
    worker-count: 16
    batch: 1000
    max-retry: 100
    enable-gtid: false
    auto-fix-gtid: false
    disable-detect: false
    safe-mode: false
